<!DOCTYPE html>
<html>
<head>
    <title>Bilety</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

  <body>

       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

       <%if notice %><pclass="alert alert-success"><%= notice %></p><%end%><%if alert %><pclass="alert alert-danger"><%= alert %></p><%end%>

      <li class="nav-item">
              
          <% if user_signed_in? %>
          <a class="btn btn-danger btn-round">Zalogowano jako: <strong><%= current_user.email %></strong></a>
          
          
          <%= link_to 'Edytuj profil', edit_user_registration_path, :class => 'nav-link' %>
          <%= link_to "Wyloguj", destroy_user_session_path, method: :delete, :class => 'nav-link' %>
          <% else %>
          <%= link_to "Zarejestruj siÄ™", new_user_registration_path, :class => 'nav-link'%> |
          <%= link_to "Zaloguj", new_user_session_path, :class => 'nav-link' %>
          <% end %>
      
      </li>

    <%= yield %>

    
  </body>
</html>
